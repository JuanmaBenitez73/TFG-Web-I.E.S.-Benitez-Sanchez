{% extends 'base.html.twig' %}

{% block title %}AMPA
{% endblock %}

{% block body %}
	<main class="p-3 mt-3 mb-3 rounded overflow-hidden">
		<div id="ampa-container" class="p-1 rounded">
			<div>
				<h1 class="text-center title">AMPA (Asociaci칩n de Madres y Padres de Alumnos)</h1>
			</div>
			<div class="p-4 text-justify">
				{% for ampa in ampas %}
					<div class="text-justify">
						<div class="ampa-info-content rounded mb-2">
							<h1 class="text-center ampa-info-content-title rounded">{{ ampa.title }}</h1>
							<p style="word-wrap: break-word; overflow-wrap:break-word; word-break: break-word">
								<b>{{ ampa.description }}</b>
							</p>
							{% if ampa.image %}
								<div class="d-flex justify-content-center">
									<div style="max-width: 400px; max-height: 400px; overflow: hidden; box-shadow: 0 0 25px #2A635A;">
										<img src="{{ asset('images/ampa/' ~ ampa.image) }}" alt="{{ ampa.image }}" style="width: 100%; height: 100%; object-fit: cover;">
									</div>
								</div>
							{% endif %}
						</div>
						<div class="d-flex align-items-center gap-2">
							<a href="{{ path('app_ampa_show', {'id': ampa.id}) }}" class="details-button py-2 px-3 rounded text-white">
								<i class="fas fa-eye"></i>
								Ver detalles
							</a>
							{% if app.session.get('user_id') is not null %}
								<a href="{{ path('app_ampa_edit', {'id': ampa.id}) }}" class="edit-button py-2 px-3 rounded text-black">
									<i class="fas fa-edit"></i>
									Editar
								</a>
							{% endif %}
						</div>
						<hr class="text-secondary">
					</div>
				{% else %}
					<div class="text-center">
						<p class="fw-bold fs-3">"No existe informaci칩n 游땞"</p>
					</div>
					<hr class="text-secondary">
				{% endfor %}
				{% if app.session.get('user_id') is not null %}
					<div class="d-flex justify-content-center">
						<a href="{{path('app_ampa_new')}}" class="create-button py-2 px-3 rounded text-black">
							<i class="fas fa-plus"></i>
							A침adir noticia / informaci칩n
						</a>
					</div>
					<hr class="text-secondary">
				{% endif %}
			</div>
		</div>
	</main>
{% endblock %}
