{% extends 'base.html.twig' %}

{% block title %}Gestión de usuarios
{% endblock %}

{% block body %}
	<main class="p-3 mt-3 mb-3 rounded overflow-hidden">
		<div id="users-container" class="p-4 rounded">
			<div>
				<h1 class="text-center title">
					<i class="fas fa-cog m-3"></i>Gestión de usuarios
				</h1>
			</div>

			<table class="table table-dark table-striped table-hover table-bordered mt-4">
				<thead>
					<tr>
						<th>Username</th>
						<th>Es Admin</th>
						<th>Acciones</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.username }}</td>
							<td>{{ user.admin ? 'Si' : 'No' }}</td>
							<td>
								<a href="{{ path('app_users_show', {'id': user.id}) }}" class="btn btn-sm btn-primary">Ver</a>
								<a href="{{ path('app_users_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Editar</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="3" class="text-center">No se encontraron registros</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<hr class="text-black">
			<div class="d-flex justify-content-center mt-3">
				<a href="{{ path('app_users_new') }}" class="btn btn-success">
					<i class="fas fa-plus"></i>
					Crear nuevo usuario
				</a>
			</div>
		</div>
	</main>
{% endblock %}
