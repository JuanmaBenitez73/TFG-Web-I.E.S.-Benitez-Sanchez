{% extends 'base.html.twig' %}

{% block title %}I.E.S. Salduba
{% endblock %}

{% block body %}
	<main class="p-3 mt-3 mb-3 rounded overflow-hidden">
		<div id="index-container" class="p-1 rounded">
			<div>
				<h1 class="text-center title">Inicio</h1>
			</div>
			<div class="p-4 text-justify">
				{% for home in homes %}
					<div class="text-justify">
						<div class="home-info-content rounded mb-2">
							<h1 class="text-center home-info-content-title rounded">{{ home.title }}</h1>
							<p style="word-wrap: break-word; overflow-wrap:break-word; word-break: break-word">
								<b>{{ home.description }}</b>
							</p>
							{% if home.image %}
								<div class="d-flex justify-content-center">
									<div style="max-width: 400px; max-height: 400px; overflow: hidden;">
										<img src="{{ asset('images/home/' ~ home.image) }}" alt="{{ home.image }}" style="width: 100%; height: 100%;object-fit: cover;" class="rounded">
									</div>
								</div>
							{% endif %}
						</div>
						<div class="d-flex align-items-center gap-2">
							<a href="{{ path('app_home_show', {'id': home.id}) }}" class="details-button py-2 px-3 rounded text-white">
								<i class="fas fa-eye"></i>
								Ver detalles
							</a>
							{% if app.session.get('user_id') is not null %}
								<a href="{{ path('app_home_edit', {'id': home.id}) }}" class="edit-button py-2 px-3 rounded text-black">
									<i class="fas fa-edit"></i>
									Editar
								</a>
							{% endif %}
						</div>
						<hr class="text-secondary">
					</div>
				{% else %}
					<div class="text-center">
						<p class="fw-bold fs-3">"No existen noticias 游땞"</p>
					</div>
					<hr class="text-secondary">
				{% endfor %}
				{% if app.session.get('user_id') is not null %}
					{% if app.session.get('is_admin') %}
						<div class="d-flex justify-content-center">
							<a href="{{path('app_home_new')}}" class="create-button py-2 px-3 rounded text-black">
								<i class="fas fa-plus"></i>
								A침adir noticia / informaci칩n
							</a>
						</div>
						<hr class="text-secondary">
					{% endif %}
				{% endif %}
			</div>
			<div class="d-flex justify-content-center">
				<div id="myCarousel" class="carousel slide m-2 rounded carousel-home-content" data-bs-ride="carousel">
					<div class="carousel-indicators">
						<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
						<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
						<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
						<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
						<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="4" aria-label="Slide 5"></button>
						<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="5" aria-label="Slide 6"></button>
						<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="6" aria-label="Slide 7"></button>
						<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="7" aria-label="Slide 8"></button>
						<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="8" aria-label="Slide 9"></button>
					</div>
					<div class="carousel-inner">
						<div class="carousel-item active">
							<img src="{{ asset('images/home/home.jpg') }}" class="d-block w-100 rounded" alt="Entrada">
							<div class="carousel-caption d-none d-md-block">
								<h5>Entrada</h5>
							</div>
						</div>
						<div class="carousel-item">
							<img src="{{ asset('images/home/hall.jpg') }}" class="d-block w-100 rounded" alt="Mural hall">
							<div class="carousel-caption d-none d-md-block">
